<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiCalendarApp.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:MauiCalendarApp.Model"
             x:Class="MauiCalendarApp.View.LecturersPage"
             x:DataType="viewmodel:LecturersPageViewModel">
    <StackLayout>
        <Frame
            CornerRadius="2"
            Margin="20,0,30,0"
            Padding="10,0,0,0">
            <Entry
                Placeholder="Wyszukaj..."
                FontSize="Body"
                Text="{Binding SearchPhrase}"
                Keyboard="Default">
                <Entry.Behaviors>
                    <toolkit:EventToCommandBehavior EventName="Completed" Command="{Binding FilterLecturersCommand}"/>
                </Entry.Behaviors>
            </Entry>
        </Frame>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
